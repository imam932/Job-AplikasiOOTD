<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- bobot container diberi 1 agar ukuran terbagi rata -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- menambahkan menu bagian atas -->

        <!-- container baju atau kaos -->
        <FrameLayout
            android:id="@+id/torso_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5"></FrameLayout>
        <!-- container celana atau rok -->
        <FrameLayout
            android:id="@+id/legs_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="5"></FrameLayout>

        <TextView
            android:id="@+id/power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:autoLink="web"
            android:fontFamily="serif-monospace"
            android:text="@string/credit"
            android:paddingLeft="15dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:autoLink="web"
            android:fontFamily="serif-monospace"
            android:text="@string/sumber"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>